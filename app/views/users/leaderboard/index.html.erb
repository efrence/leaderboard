<h1 class='page-header'>Leaderboard</h1>

<div class="alert alert-warning" role="alert">This is a sample page.</div>

<table class="table">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Email</th>
      <th>Score</th>
      <th>Games Played</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user,i| -%>
    <tr>
      <th scope="row">i</th>
      <td><%= user.email %></td>
      <td><%= user.score %></td>
      <td><%= user.games_played %></td>
    </tr>
  <% end -%>

    <%= image_tag('leaderboard.png') %>
